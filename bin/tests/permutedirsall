#!/usr/bin/env ruby
# encoding: utf-8

require'combos_permutedirs'

include Combinatorics, Combinatorics::PermuteDirs

begin
  path_names = PermuteDirs::Helper::parse_uri_file('./sample.txt')

  # Note that permute_uris may be called on a String or URI
  u = URI('https://host.dom/cgi-bin/test/apps/who/data/123/abc')

  u.permute_path do |x|
    x.each do |y|
      l = "#{u.scheme}://#{u.host}/#{y.to_a.join('/')}"

      STDOUT.puts(l)
    end
  end
rescue Exception => e
  STDERR.puts(e.inspect)
end

exit 0
